{
  "name": "codeceptjs-bdd-multi-platform",
  "version": "1.0",
  "private": "true",
  "description": "CodeceptJS BDD tests for multiple platforms",
  "scripts": {
    "codecept:run": "npm run codecept:run:api ; npm run codecept:run:infra ; npm run codecept:run:mobile ; npm run codecept:run:web",
    "codecept:run:api": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/api/configs/codecept.api.config.ts",
    "codecept:run:mobile": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/mobile/configs/codecept.mobile.config.ts",
    "codecept:run:web": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/web/configs/codecept.web.config.ts",
    "codecept:run:web:user": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/web/configs/codecept.web.config.ts --override '{\"tests\": \"../user/tests/**/*.spec.ts\", \"gherkin\": {\"features\": \"../user/bdd/features/*.feature\", \"steps\": \"../user/bdd/steps/steps.ts\"}}'",
    "codecept:types": "npm run codecept:types:api && npm run codecept:types:infra && npm run codecept:types:mobile && npm run codecept:types:web",
    "codecept:types:api": "dotenv -- codeceptjs def -c ./src/platforms/api/configs/codecept.api.config.ts -o ./src/platforms/api/configs",
    "codecept:types:mobile": "dotenv -- codeceptjs def -c ./src/platforms/mobile/configs/codecept.mobile.config.ts -o ./src/platforms/mobile/configs",
    "codecept:types:web": "dotenv -- codeceptjs def -c ./src/platforms/web/configs/codecept.web.config.ts -o ./src/platforms/web/configs",
    "codecept:ui:api": "dotenv -- codecept-ui --app -c ./src/platforms/api/configs/codecept.api.config.ts",
    "codecept:ui:mobile": "dotenv -- codecept-ui --app -c ./src/platforms/mobile/configs/codecept.mobile.config.ts",
    "codecept:ui:web": "dotenv -- codecept-ui --app -c ./src/platforms/web/configs/codecept.web.config.ts",
    "package:update": "npm-check-updates -u",
    "playground:main": "dotenv -- ts-node ./src/playground/main.ts",
    "playwright:install-browsers": "playwright install",
    "playwright:install-deps": "playwright install-deps"
    },
  "dependencies": {
    "@codeceptjs/configure": "^0.10.0",
    "@types/node": "^20.3.1",
    "codeceptjs": "^3.4.1",
    "dotenv-cli": "^7.2.1",
    "mocha": "^10.2.0",
    "mocha-multi": "^1.1.7",
    "mochawesome": "^7.1.3",
    "playwright": "^1.35.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webdriverio": "^8.10.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@codeceptjs/ui": "^0.6.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "npm-check-updates": "^16.10.13",
    "prettier": "^2.8.8"
   }
 }
