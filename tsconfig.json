{
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "reports"],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
      "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
      "types": [
      "codeceptjs",
      "node"
    ],  "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
